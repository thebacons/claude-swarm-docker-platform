{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "mcp-server-filesystem",
      "args": ["/home/claude/workspace", "/workspace/projects"],
      "description": "File system access for workspace and projects"
    },
    "linear": {
      "type": "sse",
      "url": "https://linear-mcp-server.vercel.app",
      "headers": {
        "Authorization": "Bearer ${LINEAR_API_KEY}"
      },
      "description": "Linear project management for task tracking"
    },
    "github": {
      "type": "stdio",
      "command": "mcp-server-github",
      "env": {
        "GITHUB_TOKEN": "${GITHUB_PAT_KEY}"
      },
      "description": "GitHub operations for repository management"
    }
  }
}